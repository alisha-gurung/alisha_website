    <div class="layout-container flex justify-center">
        <div class="flex w-full max-w-[1200px] items-center justify-between px-6 py-4 lg:px-10">
            <a class="flex items-center gap-3 text-navy-deep dark:text-white group" href={import.meta.env.BASE_URL}>
                <div class="size-8 flex items-center justify-center text-primary">
                    <span class="material-symbols-outlined text-[32px]">diamond</span>
                </div>
