---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';
---

<Layout title="Alisha Gurung - Personal Portfolio">
    <Navigation />
    
    <!-- Hero Section -->
    <div class="relative w-full">
        <div class="relative flex min-h-[600px] lg:min-h-[720px] flex-col items-center justify-center overflow-hidden bg-cover bg-center px-4 py-20" style='background-image: linear-gradient(rgba(13, 18, 27, 0.4), rgba(13, 18, 27, 0.6)), url("https://lh3.googleusercontent.com/aida-public/AB6AXuBliRF6kplhaH7lazN3TttAAip5m5pkXqJQjt5uxTP1iMOuRKoOD7P6E08FlF0GcQLDo-UxKXv1NknPmUxXWIIaesILHxPGYh7yFYVv-e0QcJu0HhfqvW6lWf4YGMmrfzJKGEuVj7giR9eVsdAG0OzhyqoUhjJFsJ1DKoWxTBVJLOG800sHSTSfTXW2sxfDw_NLL6BuA8XM6a0A9OFmzXJJ1n2cc_NkdsmQwAyNQmHnz8J1GpoR1DIegZlKcb3xaDrBXjBMp0c_2EI");'>
            <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-background-light dark:to-background-dark opacity-90"></div>
            <div class="relative z-10 flex max-w-[800px] flex-col items-center gap-6 text-center animate-fade-in-up">
                <span class="inline-block rounded-full bg-white/10 px-4 py-1.5 text-xs font-bold uppercase tracking-widest text-white backdrop-blur-sm border border-white/20">
                    Hospitality Professional
                </span>
                <h1 class="font-serif text-4xl font-medium leading-tight text-white md:text-6xl lg:text-7xl">
                    Elevating the Art <br/>of <span class="italic text-gold">Service</span>
                </h1>
                <p class="max-w-[540px] text-lg font-light leading-relaxed text-gray-200 md:text-xl">
                    Dedicated to providing excellent service and creating unforgettable experiences in the hospitality sector.
                </p>
                <div class="mt-4 flex gap-4">
                    <a href={import.meta.env.BASE_URL + "/portfolio"} class="bg-white text-navy-deep hover:bg-gray-100 h-12 px-8 rounded-lg text-base font-bold transition-colors shadow-lg flex items-center justify-center">
                        View Experience
                    </a>
                    <a href={import.meta.env.BASE_URL + "/contact"} class="bg-transparent border border-white/30 text-white hover:bg-white/10 h-12 px-8 rounded-lg text-base font-medium transition-colors backdrop-blur-sm flex items-center justify-center">
                         Contact Me
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Portfolio Section -->
    <div class="layout-container flex flex-col items-center w-full py-20 px-4 md:px-10 lg:px-20 bg-background-light dark:bg-background-dark" id="portfolio">
        <div class="flex flex-col max-w-[1200px] w-full gap-12">
            <div class="flex flex-col md:flex-row md:items-end justify-between gap-4 border-b border-[#e7ebf3] dark:border-gray-800 pb-6">
                <div>
                    <span class="text-gold font-bold text-sm tracking-wider uppercase mb-2 block">My Experience</span>
                    <h2 class="font-serif text-3xl md:text-4xl text-navy-deep dark:text-white">Featured Work</h2>
                </div>
                <p class="text-slate-500 max-w-sm text-sm md:text-base mb-1">
                    A timeline of professional excellence in top-tier hospitality establishments.
                </p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <ProjectCard 
                    title="Mantra Lorne Hotel"
                    location="Victoria, Australia"
                    description="F&B Team Leader ensuring smooth operations, staff scheduling, and high-quality guest service."
                    image="https://lh3.googleusercontent.com/aida-public/AB6AXuB1RawOZNhXDAEHFk5wz_K6EfTF-zWZVgg5_hCTeg3OhoktCGZmn9w2QAz7t0BP5nWIJtJKrH3CtGjx1ysJ4fmSxYBn8i_BFk8AKwFcCOLesEsMfwnx23UudUE3aP5B97qFMV0OrLMjAGdQmkrW2jT1P9RU88qZSgiozKw0zvOvqeXltqzCu2ANYtLUFTUg2ZnUhRstIKM8MM7tYr9NUO4-5e2Lh0ZwIPtH05M_b8pGhiPFeQxVP6Z8s11OCGtIXGDcPgiYPovbh9Q"
                    icon="star"
                />
                <ProjectCard 
                    title="Meraki Wellness Retreat"
                    location="Budhanilkantha, Nepal"
                    description="Server responsible for guest handling, training new staff, and ensuring exceptional dining experiences."
                    image="https://lh3.googleusercontent.com/aida-public/AB6AXuC_bvSdnLsCrZ0SeDsyQX4CC4YPdHZLlxKnatJt0zAVJGs5uw3i5Deoxx2EGjshTLoVFQd7WZjMmZaEgKcixuSFihH691BYLCjrcCPQVSIUILz9YfML8L2GDkVaF6ZgXDMiCIyg4p2HSvxYhx9IY2YPC82M5GBwmPfa7jK4BZyeI3P5ehmgcJDpsfDYVRN7MgbtahoWhqBtGZjmN-1HimH0S7Yzs0SWwkxG3_GQTMlHBUjeDXN76dRoQdOpJ5s965CYLast2hXBP4A"
                    icon="water_lux"
                />
                <ProjectCard 
                    title="Hotel Mulberry"
                    location="Kathmandu, Nepal"
                    description="Server skilled in buffet setup, room service, IDS systems, and coffee making."
                    image="https://lh3.googleusercontent.com/aida-public/AB6AXuDwNmcTGlV9ClYMDLtG8xPm7PoA-KTGLssYBaDbXVXfIfviywiV8EUsbBsqAuxGU4-DcctfxmlxYD_HPWuTnueSiuLxQpU2ERztt98b7p-eMdnawUgfGoa_jQDQ5r1sbGxUiyS2QRd2y6lq1yjDMqscWie2GokR8_-Qx2PQOWftMXP_uREpD5jSfw-p7iG3CzJihcpYoEhsyu_EzNeYo6tK3WsyacatI39THZal5Ab7L3hQIXkb0x4-UKPltQX_j7_JwAcKU5H9BqQ"
                    icon="apartment"
                />
            </div>
        </div>
    </div>

    <!-- Expertise Section -->
    <div class="w-full bg-white dark:bg-[#151c2b] py-24 px-4 border-y border-[#e7ebf3] dark:border-gray-800" id="expertise">
        <div class="layout-container flex flex-col items-center max-w-[1200px] mx-auto">
            <div class="flex flex-col lg:flex-row gap-16 w-full">
                <div class="flex-1 flex flex-col justify-center">
                    <h2 class="font-serif text-4xl md:text-5xl font-medium text-navy-deep dark:text-white mb-6 leading-tight">
                        Core <br/><span class="text-gold italic">Competencies</span>
                    </h2>
                    <p class="text-lg text-slate-600 dark:text-slate-300 mb-8 max-w-lg leading-relaxed">
                        I consider myself a hardworking person who multi-tasks effectively in competitive and fast-paced environments.
                    </p>
                    <div class="relative pl-6 border-l-2 border-gold py-2">
                        <p class="text-xl italic font-serif text-navy-deep dark:text-white leading-relaxed">
                            "I would love to take on any challenges, risks, and opportunities which will directly impact on my ambitions."
                        </p>
                        <div class="mt-4 flex items-center gap-3">
                            <div>
                                <p class="text-sm font-bold text-navy-deep dark:text-white">Alisha Gurung</p>
                                <p class="text-xs text-slate-500 uppercase">Hospitality Professional</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="flex-1 grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="p-6 rounded-xl border border-[#e7ebf3] dark:border-gray-700 bg-background-light dark:bg-[#0a1120] hover:shadow-md transition-shadow">
                        <div class="w-12 h-12 rounded-lg bg-gold/10 flex items-center justify-center text-gold mb-4">
                            <span class="material-symbols-outlined text-[28px]">groups</span>
                        </div>
                        <h3 class="text-lg font-bold text-navy-deep dark:text-white mb-2">Team Work</h3>
                        <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">
                            Collaborating effectively with diverse teams to achieve common goals.
                        </p>
                    </div>
                    <div class="p-6 rounded-xl border border-[#e7ebf3] dark:border-gray-700 bg-background-light dark:bg-[#0a1120] hover:shadow-md transition-shadow">
                        <div class="w-12 h-12 rounded-lg bg-gold/10 flex items-center justify-center text-gold mb-4">
                            <span class="material-symbols-outlined text-[28px]">support_agent</span>
                        </div>
                        <h3 class="text-lg font-bold text-navy-deep dark:text-white mb-2">Customer Service</h3>
                        <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">
                            Delivering excellent service and ensuring guest satisfaction.
                        </p>
                    </div>
                    <div class="p-6 rounded-xl border border-[#e7ebf3] dark:border-gray-700 bg-background-light dark:bg-[#0a1120] hover:shadow-md transition-shadow">
                        <div class="w-12 h-12 rounded-lg bg-gold/10 flex items-center justify-center text-gold mb-4">
                            <span class="material-symbols-outlined text-[28px]">event_available</span>
                        </div>
                        <h3 class="text-lg font-bold text-navy-deep dark:text-white mb-2">Organization</h3>
                        <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">
                            Highly organized with strong attention to detail and punctuality.
                        </p>
                    </div>
                    <div class="p-6 rounded-xl border border-[#e7ebf3] dark:border-gray-700 bg-background-light dark:bg-[#0a1120] hover:shadow-md transition-shadow">
                        <div class="w-12 h-12 rounded-lg bg-gold/10 flex items-center justify-center text-gold mb-4">
                            <span class="material-symbols-outlined text-[28px]">psychology</span>
                        </div>
                        <h3 class="text-lg font-bold text-navy-deep dark:text-white mb-2">Interpersonal Skills</h3>
                        <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">
                            Active listener, quick learner, and flexible in adapting to needs.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <Footer />
</Layout>
