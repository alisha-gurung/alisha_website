---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';
---

<Layout title="Managed Properties - Alisha Gurung">
    <Navigation />
    
    <main class="flex-grow flex flex-col items-center px-4 md:px-10 lg:px-40 py-10 w-full">
        <div class="w-full max-w-7xl flex flex-col gap-10">
            <!-- Page Heading -->
            <div class="flex flex-col gap-4 border-l-4 border-primary pl-6">
                <h1 class="text-slate-900 dark:text-white text-4xl md:text-5xl font-light tracking-tight">Professional Experience</h1>
                <p class="text-slate-600 dark:text-[#cbbc90] text-lg max-w-2xl font-light">
                    A timeline of my journey in the hospitality industry, showcasing my roles and responsibilities in various esteemed establishments.
                </p>
            </div>
            
            <!-- Filters -->
            <div class="flex flex-wrap items-center justify-between gap-4 py-4 border-y border-navy-light/10 dark:border-primary/10">
                <div class="flex flex-wrap gap-3">
                    <button class="bg-white px-4 py-2 rounded-full border text-sm font-medium hover:text-primary transition-colors">All Years</button>
                    <button class="bg-white px-4 py-2 rounded-full border text-sm font-medium hover:text-primary transition-colors">Location</button>
                    <button class="bg-white px-4 py-2 rounded-full border text-sm font-medium hover:text-primary transition-colors">Rating</button>
                </div>
                <div class="text-slate-500 text-sm">Showing 3 of 12 Properties</div>
            </div>

            <!-- Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <ProjectCard 
                    title="Mantra Lorne Hotel"
                    location="Victoria, Australia"
                    description="F&B Team Leader (2025-Present). Managed staff scheduling, stocktakes, and coordinated between kitchen and service teams. Handled admin tasks like shift reports and bank reconciliation."
                    image="https://lh3.googleusercontent.com/aida-public/AB6AXuB1RawOZNhXDAEHFk5wz_K6EfTF-zWZVgg5_hCTeg3OhoktCGZmn9w2QAz7t0BP5nWIJtJKrH3CtGjx1ysJ4fmSxYBn8i_BFk8AKwFcCOLesEsMfwnx23UudUE3aP5B97qFMV0OrLMjAGdQmkrW2jT1P9RU88qZSgiozKw0zvOvqeXltqzCu2ANYtLUFTUg2ZnUhRstIKM8MM7tYr9NUO4-5e2Lh0ZwIPtH05M_b8pGhiPFeQxVP6Z8s11OCGtIXGDcPgiYPovbh9Q"
                    icon="star"
                />
                <ProjectCard 
                    title="Meraki Wellness Retreat"
                    location="Budhanilkantha, Nepal"
                    description="Server (2024-2025). Handled guest complaints, trained new staff, and planned daily tasks. Ensured food safety and hygiene standards were met in a fast-paced environment."
                    image="https://lh3.googleusercontent.com/aida-public/AB6AXuC_bvSdnLsCrZ0SeDsyQX4CC4YPdHZLlxKnatJt0zAVJGs5uw3i5Deoxx2EGjshTLoVFQd7WZjMmZaEgKcixuSFihH691BYLCjrcCPQVSIUILz9YfML8L2GDkVaF6ZgXDMiCIyg4p2HSvxYhx9IY2YPC82M5GBwmPfa7jK4BZyeI3P5ehmgcJDpsfDYVRN7MgbtahoWhqBtGZjmN-1HimH0S7Yzs0SWwkxG3_GQTMlHBUjeDXN76dRoQdOpJ5s965CYLast2hXBP4A"
                    icon="water_lux"
                />
                <ProjectCard 
                    title="Hotel Mulberry"
                    location="Kathmandu, Nepal"
                    description="Server (2022-2023, 2025). Knowledgeable in IDS system for billing and settlement. Experienced in buffet setup, room service, coffee making, and guest handling."
                    image="https://lh3.googleusercontent.com/aida-public/AB6AXuDwNmcTGlV9ClYMDLtG8xPm7PoA-KTGLssYBaDbXVXfIfviywiV8EUsbBsqAuxGU4-DcctfxmlxYD_HPWuTnueSiuLxQpU2ERztt98b7p-eMdnawUgfGoa_jQDQ5r1sbGxUiyS2QRd2y6lq1yjDMqscWie2GokR8_-Qx2PQOWftMXP_uREpD5jSfw-p7iG3CzJihcpYoEhsyu_EzNeYo6tK3WsyacatI39THZal5Ab7L3hQIXkb0x4-UKPltQX_j7_JwAcKU5H9BqQ"
                    icon="apartment"
                />
            </div>
        </div>
    </main>

    <Footer />
</Layout>
